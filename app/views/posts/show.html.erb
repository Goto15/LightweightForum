<h1><%= @post.title %></h1>
<div class='author'><%= @post.user.username %></div>
<div class='content'><%= @post.content %></div>
<div class='topics'>
    <% @post.topics.each do |t| %>
        <%= link_to t.name, topic_path(t) %>
    <% end %>
</div>
<div class='content'>
    <% @post.comments.each do |c| %>
        <%= c.content %>
        <span class='author'><%= c.user.username %></span>
    <% end %>
</div>